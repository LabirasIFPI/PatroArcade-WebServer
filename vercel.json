{
    "version": 2,
    "builds": [ 
        { 
            "src": "package.json", 
            "use": "@vercel/node" 
        } 
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/dist/server.js"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; script-src 'self' https://vercel.live; connect-src 'self' https://vercel.live; style-src 'self' 'unsafe-inline';"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                }
            ]
        }
    ]
}
