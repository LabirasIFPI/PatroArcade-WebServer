extends base.pug

block headExtra
    title Página Inicial

block content 
    section#latestNews
      h2 Novidades
      ul
        each news in latestNews
          li 
            h3= news.title
            p= news.content
    section#pontuacoes
        h2 Melhores Colocações
        table
            thead
                tr
                    th Nome
                    th Pontuação Total
            tbody
                each player in players
                    tr
                        td 
                            a(href=`/profile/${player.userId}`).player-link= player.name
                        td #{player.totalScore}
    section#links-uteis
