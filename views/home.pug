extends base.pug

block headExtra
    title Página Inicial

block content 
    section#latestNews
      h2 Novidades
      ul
        each news in latestNews
          li 
            h3= news.title
            p= news.content
    section#pontuacoes
        h2 Melhores Colocações 
        ul
            each player in players
                li 
                    p #{player.name} - #{player.totalScore}
